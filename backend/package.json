{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www",
    "dev": "export NODE_ENV=development || SET \"NODE_ENV=development\" && npm-run-all build server",
    "prod": "export NODE_ENV=production || SET \"NODE_ENV=production\" && npm-run-all build server",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon",
    "test": "jest"
  },
  "dependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.19",
    "@babel/preset-env": "^7.22.15",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "~4.16.1",
    "moment": "^2.29.4",
    "mongoose": "^7.5.1",
    "morgan": "~1.9.1",
    "nodemon": "^3.0.1",
    "node-cron": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
